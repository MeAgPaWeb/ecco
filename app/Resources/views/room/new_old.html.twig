{% extends 'default.html.twig' %}
{% form_theme form 'form/fields.html.twig' %}
{% set page =
    {
        "title": "Sala",
        "subtitle": "Crear en Facultad de Ingeniaria de la UN",
    }
%}

{% block javascript %}
    {{ parent() }}
    <script type="text/javascript">
    $(function () {
      $('.select2').select2()
    })
    </script>
{% endblock javascript %}
{% block breadcrumb %}
    <li><a href="{{ path('room_index') }}"> Sala</a></li>
    <li>Crear </li>
    <li class="active">Facultad de Ingeniaria de la UNLP</li>
{% endblock %}

{% block content %}
  <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Agregando una sala </h3>
      </div>
      <div class="box-body">
          <form role="form">
            <div class="row">
              <div class="col-md-4">
                  <div class="form-group ">
                  <label>Uso de la Sala</label>

                  <select class="form-control ">
                    <option>Deposito</option>
                    <option>Sala de Lectura</option>
                  </select>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label>Equipo de Acondicionamiento</label>
                  <select class="form-control">
                    <option>Si</option>
                    <option>No</option>
                  </select>
                </div>
              </div>
              <div class="col-md-4">
                  <div class="form-group ">
                  <label>Seleccione las caras expuestas al exterior</label>

                  <select class="form-control select2" multiple="" data-placeholder="Seleccione los lados expuestos">
                    <option disabled>Piso</option>
                    <option>Techo</option>
                    <option>Pared 1</option>
                    <option>Pared 2</option>
                    <option>Pared 3</option>
                    <option>Pared 4</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-4">
                <div class="form-group">
                  <label>Ancho</label>
                  <input class="form-control" placeholder="Ingrese el ancho..." type="text">
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label>Largo</label>
                  <input class="form-control" placeholder="Ingrese el largo..." type="text">
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label>Alto</label>
                  <input class="form-control" placeholder="Ingrese el alto..." type="text">
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-3">
                <div class="form-group">
              <label>Composición del Techo</label>
              <select class="form-control">
                <option>Cubierta hormigón armado</option>
                <option>Entrepiso hormigón armado</option>
                <option>Entrepiso madera</option>
                <option>Cubierta de chapa</option>
                <option>Cubierta de tejas</option>
              </select>
            </div>
              </div>
              <div class="col-md-3">
                <div class="form-group">
              <label>Composición del piso</label>
              <select class="form-control">
                <option>Entrepiso madera</option>
                <option>Entrepiso hormigón armado</option>
                <option>Terreno natural </option>
              </select>
            </div>
              </div>
              <div class="col-md-3">
                <div class="form-group">
              <label>Composición de las paredes</label>
              <select class="form-control">
                <option>Rev + Lad. hueco + Rev</option>
                <option>Rev + Lad.20 cm + Rev</option>
                <option>Rev + Lad. 25 + Rev</option>
                <option>Rev + Lad. común 30 cm + Rev</option>
                <option>Rev + Lad. común 45 cm + Rev</option>
              </select>
            </div>
              </div>
              <div class="col-md-3">
                <div class="form-group">
              <label>Composición de las ventanas</label>
              <select class="form-control">
                <option>de hierro o chapa vidrio simple</option>
                <option>de madera vidrio simple</option>
                <option>de aluminio vidrio simple</option>
                <option>de aluminio c/ vidrio doble</option>
                <option>de PVC con vidrio simple</option>
                <option>de PVC con vidrio doble</option>
              </select>
            </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label>Superficie Total Vidriada <small>mt2</small></label>
                  <input class="form-control" placeholder="Ingrese la superficie vidriada..." type="text">
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group" style="overflow:hidden;">
                  <label for="exampleInputFile">Registro del DataLogger</label>
                  <input id="exampleInputFile" type="file">
                  <p class="help-block">Seleccione el archivo CSV ("#";"Date";"Time, GMT-03:00";"Temp, °C";"RH, %";"DewPt, °C")</p>
                </div>
              </div>
            </div>
            <div class="box-footer">
                <a href="{{ path('room_new') }}" type="submit" class="btn btn-primary">Agregar Otra Sala</a>
                <a href="{{ path('homepage') }}" type="submit" class="btn btn-success">Finalizar Carga</a>
            </div>
        </form>
      </div>
  </div>
{#
    <h1>Room creation</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="Create" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('room_index') }}">Back to the list</a>
        </li>
    </ul>
#}

{% endblock %}
